<Patch>
	<!--[KIR]Extra Mechanoid Units and Equipment-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Mechanoids - Mechanoid Re-Assembler</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "REMA_MechAssembler"]/comps/li[3]/spawnablePawnKinds</xpath>
					<value>
						<li>REP_Mech_Reaper</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>